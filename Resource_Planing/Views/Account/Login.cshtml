                                    <div class="input-group-append">
                                        <span class="input-group-text eye-icon" onclick="togglePasswordVisibility()">
                                            <i id="eye" class="fa fa-eye"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Login</button>
                            </div>
                            <div class="form-group">
