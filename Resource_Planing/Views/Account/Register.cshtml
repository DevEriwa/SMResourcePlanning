@model Core.Models.ApplicationUser

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_HomePageLayout.cshtml";
}

<div class="account-content" style="padding-top:100px;">
    <a asp-action="Login" asp-controller="Account" class="btn btn-primary apply-btn ">Login</a>
    <div class="container">
        <!-- Account Logo -->
        <div class="account-logo">
            <a href="~/Home/Index"><img src="" alt=""></a>
        </div>
        <!-- /Account Logo -->
        <div class="account-box">
            <div class="account-wrapper">
                <h3 class="account-title">Register</h3>
                <p class="account-subtitle">Access to our dashboard</p>
                <!-- Account Form -->
                <form asp-controller="Account" asp-action="Register" method="post">

                    @if (TempData["Message"] != null)
                    {

                        var tempDatamessage = (Resource_Planing.Models.Message)TempData["Message"];
                        <partial name="_Message" model="tempDatamessage" />
                    }

                    <div class="form-group">
                        <label>Email</label>
                        <input asp-for="Email" class="form-control" type="email" required>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input class="form-control" asp-for="Password" type="password">
                    </div>
                    <div class="form-group">
                        <label>Repeat Password</label>
                        <input class="form-control" asp-for="ConfirmPassword" type="password">
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-primary account-btn" type="submit">Register</button>
                    </div>
                    <div class="account-footer">
                        <p>Already have an account? <a asp-action="Login">Login</a></p>
                    </div>
                </form>
                <!-- /Account Form -->
            </div>
        </div>
    </div>
</div>


