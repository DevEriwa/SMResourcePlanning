@using Core.Models;
@model IEnumerable<Core.Models.EmployeeLeave>
@{
    ViewData["Title"] = "User Dashboard";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}




<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Profile</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">User Profile</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped custom-table datatable">
                        <thead>
                            <tr>
                                <th>S/N</th>
                                <th>Name</th>
                                <th>Leave Type</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Reasons</th>
                                <th>Role</th>
                                <th class="text-right no-sort">Action</th>
                            </tr>
                        </thead>
                        <tbody id="employeeSerial">
                            @foreach (var appliedLeave in Model)
                            {
                                <tr>
                                    <td> </td>
                                    <td>
                                        <h2 class="table-avatar">
                                                <a href="#" class="avatar"><img alt="" src="~/img/user.jpg"></a>
                                            <a href="#" data-target="#add_detail" data-toggle="modal">@appliedLeave.Name</a>
                                        </h2>
                                    </td>
                                    <td>@appliedLeave.LeaveType</td>
                                    <td>@appliedLeave.StartDate</td>
                                    <td>@appliedLeave.EndDate</td>
                                    <td>@appliedLeave.LeaveReason</td>
                                    <td>
    
                                    </td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="#" onclick="editEmployee()"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                <a class="dropdown-item" href="#" data-toggle="modal" onclick="selectDeleteId()" data-target="#delete_employee"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                                <a class="dropdown-item" href="#" data-toggle="modal" onclick="setEmployeeId() " data-target="#employee_Absence"><i class="fa fa-user-times text-danger m-r-5"></i> Mark Absence</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /Page Content -->
        }
        else
        {
        <h2 class="text-center text-primary"> There is no Applieed Leave </h2>
        }


    </div>
    <!-- /.container-fluid -->
</section>