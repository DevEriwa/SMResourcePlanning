<!-- Add leave Modal -->

<div class="page-wrapper">
    <!-- Content Header (Page header) -->
    <div id="add_employee" class="modal custom-modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Setup Leave Type</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Name <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="leaveName">
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Abbreviation <span class="text-danger">*</span></label>
                                <input class="form-control" type="text" id="leaveabbreviation">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group form-focus text-center">
                                <div class="toggle-switch" id="annualLeaveToggle">
                                    <h4>Annual Leave</h4>
                                    <label class="switch">
                                        <input type="checkbox" id="deductleave">
                                        <span class="slider round"></span>
                                    </label>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <div id="infomationPrice"></div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group text-center">
                                <h4>Timesheet</h4>
                                <div class="toggle-switch" id="timesheetToggle">
                                    <label class="switch">
                                        <input type="checkbox" id="showPendingBalance">
                                        <span class="slider round"></span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="submit-section text-center">
                                <button class="btn btn-primary submit-btn" id="submit_btn" onclick="createLeave()">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <!-- /Add leave Modal -->
    <!-- Edit leave Modal -->
    <div id="edit_location" class="modal custom-modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Location</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-sm-12">
                        <label class="col-form-label">Location Name <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" id="editLocation_Name">
                        <input class="form-control" type="text" hidden id="editLocationId">
                    </div>
                    <div class="col-sm-12">
                        <label class="col-form-label">Abbreviated Location Name <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" id="editabbreviationlocation_Name">
                    </div>
                    <div class="col-sm-12">
                        <div class="submit-section">
                            <button class="btn btn-primary submit-btn" id="submit_Btn" onclick="LocationToSave()">Submit </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Edit location Modal -->
    <!-- DELETE Purchase Plan Modal -->
    <div class="modal fade" id="delete_location">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content" style="border-radius: 25px;">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title text-center">Delete Location</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="card">
                        <div class="card-body">
                            <!--  profile wrapper start -->
                            <div class="row">
                                <input type="text" id="deleteLocationId" hidden>
                                <div class="col-lg-12 col-md-12 col-sm-12">
                                    <div class="text-center">
                                        <h5 class="pb-2"><b>Are you sure want to delete?</b></h5>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="row justify-content-center">
                                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                                            <label class="btn bg-danger active">
                                                <input type="radio" name="options" autocomplete="off" checked="" onclick="deleteLocation()"> Delete
                                            </label>

                                            <label class="btn bg-info">
                                                <input type="radio" name="options" autocomplete="off" data-dismiss="modal"> Cancel
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--  profile wrapper end -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /DELETE Purchase Plan Modal -->
</div>

