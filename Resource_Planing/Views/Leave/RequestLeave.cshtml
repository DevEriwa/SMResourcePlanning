    </div>

</div>

<script>
    function employeeViewLeaveReason(id) {
        debugger;
        $.ajax({
            type: 'GET',
            url: '@Url.Action("ViewLeaveReason", "Leave")', //we are calling json method
            data: { leaveId: id },
            success: function (data) {
                $("#employeeViewLeaveModalBody").html(data);
            }
        });
