function leaveToBeCancel(Id) {
	debugger;
	$("#cancel_Id").val(Id);
}


function employeeCancelLeave(action) {
	debugger
	if (action == "CANCELED") {
		errorAlert("Oops! This leave can't be canceled again");
	}
	else {
		var cancelId = $("#cancel_Id").val();

		$.ajax({
			type: 'Post',
			dataType: 'json',
			url: '/Leave/CancelLeave',
			data:
			{
				id: cancelId,
			},
			success: function (result) {
				debugger
				if (!result.isError) {
					var url = '/Leave/RequestLeave';
					successAlertWithRedirect(result.msg, url)
				}
				else {
					errorAlert(result.msg)
				}
			},
			error: function (ex) {
				errorAlert("Error occured try again");
			}
		});
	}
}

function leaveToBeEdited(action) {
	debugger;
	if (action == "APPROVE"||"DECLINE"||"CANCEL") {
		errorAlert("Oops! This leave can't be Edit again");
	};
}

function employeeLeaveToBeEdited(id) {
	debugger;
	$.ajax({
		type: 'Get',
		dataType: 'Json',
		url: '/Leave/EditStaffLeave',
		data: {
			id: id
		},
		success: function (result) {
			debugger;
			if (!result.isError) {
				$('#leaveStaffId').val(result.id);
				if (result.name.includes("Annual Leave")) {
					$('#btns').prop('checked', false);
					$('#annaulLeaveId').prop('checked', true);
				} else {
					$('#btns').prop('checked', true);
					$('#annaulLeaveId').prop('checked', false);
				}
				$('#otherTypeLeaveId').val(result.name);
				$('#startDate').val(dateToInput(result.startDateInString));
				$('#endDate').val(dateToInput(result.endDateInString));
				$('#numberOfDaysRemaining').val(result.numberOfDays);
				$('#remainingLeaveDays').val(result.remainingLeave);
				$('#leaveReason').val(result.leaveReason);
			}
			else {
				errorAlert(result.msg)
			}
		},
		error: function (ex) {
			errorAlert("Error occured try again");
		}
	})
}

function dateToInput(dateString) {

	var now = new Date(dateString);
	var day = ("0" + now.getDate()).slice(-2);
	var month = ("0" + (now.getMonth() + 1)).slice(-2);

	var today = now.getFullYear() + "-" + (month) + "-" + (day);

	return today;
}


function editStaffleave() {
	debugger;
	var data = {};
	var leaveId;
	var leaveId = document.getElementById("annaulLeaveId").checked;
	var otherTypeLeaveId = document.getElementById("otherTypeLeaveId").checked;
	if (leaveId == true) {
		data.LeaveId = $('#annaulLeaveId').val();
	} else {
		data.LeaveId = $('#otherTypeLeaveId').val();
	}
	data.Id = $('#leaveStaffId').val();
	data.StartDate = $('#startDate').val();
	data.EndDate = $('#endDate').val();
	data.numberOfDays = $('#numberOfDaysRemaining').val();
	data.remainingLeave = $('#remainingLeaveDays').val();
	data.leaveReason = $('#leaveReason').val();
	let leaveDetail = JSON.stringify(data);
	$.ajax({
		type: 'Post',
		dataType: 'Json',
		url: '/Leave/EditStaffLeave',
		data: {
			leaveDetails: leaveDetail,
		},
		success: function (result) {
			debugger;
			if (!result.isError) {
				var url = '/Leave/RequestLeave'
				successAlertWithRedirect(result.msg, url)
			}
			else {
				errorAlert(result.msg)
			}
		},
		error: function (ex) {
			errorAlert("Error occured try again");
		}
	})
}
</script>

