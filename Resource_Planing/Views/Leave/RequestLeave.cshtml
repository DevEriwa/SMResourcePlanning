@using static Core.Enums.Resource_Planing
@inject Logic.IHelpers.IUserHelper _userHelper;
@model Core.Models.EmployeeLeave
@{
    ViewData["Title"] = "RequestLeave";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var name = User.Identity.Name;
    var tableUpdate = _userHelper.GetEmployeeLeave(name);
    var annualLeaves = tableUpdate.Where(x => x.Name.ToLower().Contains("annual")).ToList();
    var annualLeave = _userHelper.GetAnnualLeave(User.Identity.Name);
}


<div class="page-wrapper">

    <!-- Page Content -->
    <div class="content container-fluid">

        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Leaves</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                        <li class="breadcrumb-item active">Leaves</li>
                    </ul>

                </div>
                <div class="col-auto float-right ml-auto">
                    <a href="#" class="btn add-btn" data-toggle="modal"
                       data-target="#add_leave"><i class="fa fa-plus"></i> Request For Leave</a>
                </div>
            </div>
        </div>


        <!-- /Page Header -->
        <!-- Leave Statistics -->
        @if (tableUpdate == null || tableUpdate.Count() == 0)
        {
            <div><h2 class="text-center text-primary">No leave yet</h2></div>

        }
        else
        {
            @if (annualLeaves.Count() != 0)
            {
                <div class="row">
                    <div class="col-md-3" onclick="getleaveByLeaveType(@annualLeaves.FirstOrDefault().Id)">
                        <div class="stats-info">
                            <h6>Annual Leave </h6>
                            <h4>@annualLeaves.Count()</h4>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group form-focus select-focus">
                            <select class="select floating form-control" id="leaveTypeId" onchange="getleaveByLeaveType()" asp-items="@(new SelectList(@ViewBag.Leave,  "Id" ,"Name"))"></select>
                            <label class="focus-label">Other Leaves</label>
                        </div>
                    </div>
                </div>
            }

            <!-- /Leave Statistics -->

            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped custom-table mb-0 datatable">
                            <thead>
                                <tr>
                                    <th>Leave Type</th>
                                    <th>From</th>
                                    <th>To</th>
                                    <th>Date Applied</th>
                                    <th class="text-center">Reason for leave</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-right no-sort">Action</th>
                                </tr>
                            </thead>
                            <tbody id="leaveDetails">
                                @foreach (var obj in tableUpdate)
                                {
                                    <tr>

                                        <td>@obj.StaffName</td>
                                        <td>@obj.LeaveType</td>
                                        <td>@obj.StartDate.ToString("D")</td>
                                        <td>@obj.EndDate.ToString("D")</td>
                                        <td>@obj.DeteCreated.ToString("D")</td>
                                        <td class="submit-section">
                                            <a class="btn btn-primary submit-btn" data-target="#viewMore_department" data-toggle="modal"
                                               onclick="employeeViewLeaveReason('@obj.Id')">
                                                View Reason
                                            </a>
                                        </td>
                                        <td class="text-center">
                                            <div class="action-label">
                                                <a class="btn btn-white btn-sm btn-rounded disabled" href="javascript:void(0);">
                                                    <i class="fa fa-dot-circle-o text-purple"></i> @obj.LeaveStatus
                                                </a>
                                            </div>
                                        </td>

                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    @if (obj.LeaveStatus == LeaveStatus.Applied)
                                                    {
                                                        <a class="dropdown-item" data-toggle="modal" data-target="#edit_leave" onclick="employeeLeaveToBeEdited('@obj.Id')"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                        <a href="#" data-toggle="modal" data-target="#Cancel_leave" onclick="leaveToBeCancel('@obj.Id')" style="color:black"><i class="fa fa-times-circle-o ml-3 m-r-5" style="font-size:25px;color:red"></i>Cancel</a>
                                                    }
                                                    else
                                                    {
                                                        <a class="dropdown-item" onclick="leaveToBeEdited('APPROVE','DECLINE','CANCEL')"><i class="fa fa-pencil m-r-5"></i> Edit</a>

                                                        <a href="#" onclick="employeeCancelLeave('CANCELED')" style="color:black"><i class="fa fa-times-circle-o ml-3 m-r-5" style="font-size:25px;color:red"></i> Cancel</a>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        }
    </div>
    <!-- /Page Content -->
    <!-- Add Leave Modal -->
