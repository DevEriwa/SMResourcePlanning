@* @model List<Core.Models.ShiftsLocation> *@
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


 <div class="col-md-6 offset-md-3 col-12">
    <div class="card punch-status shadow">
        <h5 class="card-title p-2 text-center" style="font-size: 30px">Timesheet <small class="text-muted">11 Mar 2019</small></h5>
        <div class="card-body">
            <div class="punch-det">
                <h6>Clock In at</h6>
                <p>Wed, 11th Mar 2019 10.00 AM</p>
            </div>
            <div class="punch-info text-center">
                <div class="punch-hours">
                    <span>3.45 hrs</span>
                </div>
            </div>
            <div class="punch-btn-section text-center">
                <button type="button" class="btn btn-primary punch-btn">Clock Out</button>
            </div>
            <div class="statistics">
                <div class="row">
                    <div class="col-md-6 col-6 text-center">
                        <div class="stats-box">
                            <p>Break</p>
                            <h6>1.21 hrs</h6>
                        </div>
                    </div>
                    <div class="col-md-6 col-6 text-center">
                        <div class="stats-box">
                            <p>Overtime</p>
                            <h6>3 hrs</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

