@model IEnumerable<Core.Models.Time>
@{
    ViewData["Title"] = "All Time";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>

	body {
		counter-reset: Serial; /* / Set the Serial counter to 0 /*/
	}

	tr td:first-child:before {
		counter-increment: Serial; /* / Increment the Serial counter /*/
		content: counter(Serial); /*  / Display the counter /*/
	}
</style>
<div class="page-wrapper">

    <!-- Page Content -->
    <div class="content container-fluid">

        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col">
                    <h3 class="page-title">Time</h3>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active">Time</li>
                    </ul>
                </div>
                <div class="col-auto float-right ml-auto">
                    <a href="#" class="btn add-btn" data-toggle="modal" data-target="#add_Time"><i class="fa fa-plus"></i> Add Time</a>
                </div>
            </div>
        </div>
        <!-- /Page Header -->

        <div class="row">
            <div class="col-md-8 offset-2">
                <div>
                    @if (Model.Count() > 0 && Model != null)
                    {
                        <table class="table table-striped custom-table mb-0 datatable">
                            <thead>
                                <tr>
                                     <th>S/N</th>
                                    <th>Shift Time</th>
                                    <th>Date Created</th>
                                    <th class="text-right">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var time in Model)
                                {
                                    <tr>
                                         <td></td>
                                        <td>@time.ShiftTime</td>
                                        <td>@time.DeteCreated</td>
                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" data-toggle="modal" data-target="#edit_Time" onclick="timeToBeEdited('@time.Id')"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_Time" onclick="timeToBeDeleted('@time.Id')"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="row p5 m-5">
                            <div class="col-md-12 text-center p-5 m5">
                                <h2>No Record Found</h2>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
    <!-- /Page Content -->
    <!-- Add Time Modal -->
    <div id="add_Time" class="modal custom-modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add Time</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="col-form-label">Shift Time <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" id="shiftTime">
                    </div>
                   
                    <div class="submit-section">
                        <button class="btn btn-primary submit-btn" id="submit_btn" onclick="addTime()">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Add Time Modal -->
    <!-- Edit Time Modal -->
    <div id="edit_Time" class="modal custom-modal fade" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-md" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Time</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="col-sm-12">
                        <label class="col-form-label">Shift Time <span class="text-danger">*</span></label>
                        <input class="form-control" type="text" id="editTime_ShiftName">
                        <input class="form-control" type="text" hidden id="editTimeId">
                    </div>
                    

                    <div class="col-sm-12">
                        <label class="col-form-label">Date Created <span class="text-danger">*</span></label>
                        <input class="form-control" type="date" id="editDateCreate_date">
                    </div>

                    <div class="col-sm-12">
                        <div class="submit-section">
                            <button class="btn btn-primary submit-btn" id="submit_Btn" onclick="TimeToSave()">Submit </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Edit Time Modal -->
    <!-- Delete Time Modal -->
    <div class="modal custom-modal fade" id="delete_Time" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <input class="form-control" type="text" id="deleteTimeId" hidden>
                    <div class="form-header">
                        <h3>Delete Time</h3>
                        <p>Are you sure want to delete?</p>
                    </div>
                    <div class="modal-btn delete-action">
                        <div class="row">
                            <div class="col-6">
                                <a href="javascript:void(0);" class="btn btn-primary continue-btn" onclick="deleteTime()">Delete</a>
                            </div>
                            <div class="col-6">
                                <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary cancel-btn">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /Delete Time Modal -->

</div>


