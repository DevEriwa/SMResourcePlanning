@model IEnumerable<Core.Models.Shift>
@{
	ViewData["Title"] = "Shift";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<style>

	body {
		counter-reset: Serial; /* / Set the Serial counter to 0 /*/
	}

	tr td:first-child:before {
		counter-increment: Serial; /* / Increment the Serial counter /*/
		content: counter(Serial); /*  / Display the counter /*/
	}
</style>

<!-- Page Wrapper -->
<div class="page-wrapper">

	<!-- Page Content -->
	<div class="content container-fluid">
		<!-- Page Header -->
		<div class="page-header">
			<div class="row align-items-center">
				<div class="col">
					<h3 class="page-title">Shifts</h3>
					<ul class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
						<li class="breadcrumb-item active">Shifts</li>
					</ul>
				</div>
				<div class="col-auto float-right ml-auto">
					<a href="#" class="btn add-btn" data-toggle="modal" data-target="#add_vaccines"><i class=""></i>Add Shift</a>
				</div>
			</div>
		</div>
		<!-- /Page Header -->
		<div class="row">
			<div class="col-sm-12">
				<div class="table-responsive">
					<table class="table table-striped custom-table mb-0" id="dataTableSearch">
						<thead>
							<tr>
								<th>S/N</th>
								<th>Location Name</th>
                                <th>Location AbbreviationName</th>
                                <th>Date Created</th>
                                <th class="text-right">Action</th>
							</tr>
						</thead>
						@if (Model.Count() > 0 && Model != null)
						{
							<tbody>
								@foreach (var shift in Model)
								{
									<tr>
										<td></td>
										<td>@shift.Name</td>
										<td>@shift.AbbreviatedName</td>
										<td class="pl-5">@shift.DeteCreated.ToString("D")</td>
										<td class="text-center">
											<div class="dropdown dropdown-action">
												<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
												<div class="dropdown-menu dropdown-menu-right">
													<a class="dropdown-item" href="#" data-toggle="modal" data-target="#editRequiredVaccinesId" onclick="GetShiftByID('@shift.Id')"><i class="fa fa-pencil m-r-5"></i> Edit</a>
													<a class="dropdown-item" href="#" data-toggle="modal" data-target="#deleteRequiredVaccinesId" onclick="RequiredVaccinesToBeDeleted('@shift.Id')"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
												</div>
											</div>
										</td>
									</tr>
								}
							</tbody>
						}
					</table>
				</div>
			</div>
		</div>
	</div>
	<!-- /Page Content -->
	<!-- Add copy Modal -->
	<div id="add_vaccines" class="modal custom-modal fade" role="dialog">
		<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Add RequiredVaccines</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">

					<div class="row">
						<div class="form-group">
							<label class="col-form-label">Department Name <span class="text-danger">*</span></label>
							<input class="form-control" type="text" id="shiftName">
						</div>
						<div class="form-group">
							<label class="col-form-label">Abbreviated Shift Name <span class="text-danger">*</span></label>
							<input class="form-control" type="text" id="abbreviationlocationName">
						</div>
					</div>

					<div class="submit-section">
						<button class="btn btn-primary submit-btn" id="submit_btn" onclick="addShift()">Submit</button>
					</div>

				</div>
			</div>
		</div>
	</div>
	<!-- /Add copy Modal -->
	<!-- Edit Frequency Modal -->
	<div id="editRequiredVaccinesId" class="modal custom-modal fade" role="dialog">
		<div class="modal-dialog modal-dialog-centered modal-lg" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Edit Shift</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">

					<div class="row">
						<div class="form-group">
							<label class="col-form-label">Department Name <span class="text-danger">*</span></label>
							<input class="form-control" type="text" id="edit_shiftName">
						</div>
						<div class="form-group">
							<label class="col-form-label">Abbreviated Shift Name <span class="text-danger">*</span></label>
							<input class="form-control" type="text" id="edit_abbreivated">
						</div>
					</div>

					<div class="submit-section">
						<input class="form-control" type="text" hidden id="edit_Id">
						<button class="btn btn-primary submit-btn" id="submit_btn" onclick="EditShift()">Submit</button>
					</div>

				</div>
			</div>
		</div>
	</div>
	<!-- /Add copy Modal -->



	<div class="modal custom-modal fade" id="deleteRequiredVaccinesId" role="dialog">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-body">
					<div class="form-header">
						<h3>Delete RequiredVaccines</h3>
						<input class="form-control" type="text" id="deleteVacc_Id" hidden>
						<p>Are you sure want to delete RequiredVaccines?</p>
					</div>
					<div class="modal-btn delete-action">
						<div class="row">
							<div class="col-6">
								<a href="javascript:void(0);" class="btn btn-primary continue-btn" onclick="deleteRequiredVaccines()">Delete</a>
							</div>
							<div class="col-6">
								<a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary cancel-btn">Cancel</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>
<!-- /Page Wrapper -->